                               ExpandDirection="Down"
                               IsExpanded="False"
                               Tag="bing"
                               Expanding="ExpanderProvider_Expanding"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               Margin="0,8,0,0">
                    <muxc:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1"
                                        Margin="0,12"
                                        Orientation="Vertical">
                                <TextBlock x:Uid="SettingsBingTitle"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock x:Uid="SettingsBingDesc"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           MaxLines="1"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="WrapWholeWords" />
                            </StackPanel>
                        </Grid>
                    </muxc:Expander.Header>
                    <muxc:Expander.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Margin="0,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      FontFamily="{ThemeResource FluentIcons}"
                                      FontSize="16"
                                      Glyph="&#xE909;" />
                            <TextBlock Grid.Column="1" x:Uid="TextBingLang"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                            <ComboBox Name="BoxBingLang"
                                      Grid.Column="2"
                                      MinWidth="140"
                                      ItemsSource="{x:Bind listBingLang}"
                                      SelectionChanged="BoxBingLang_SelectionChanged" />
                        </Grid>
                    </muxc:Expander.Content>
