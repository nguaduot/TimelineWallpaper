                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xE7F7;" />
                </MenuFlyoutItem.Icon>
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="B" Modifiers="Control" />
                </MenuFlyoutItem.KeyboardAccelerators>
            </MenuFlyoutItem>
            <MenuFlyoutItem Name="BtnSetLock"
                            x:Uid="BtnSetLock"
                            IsEnabled="False"
                            Click="BtnSetLock_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xEE3F;" />
                </MenuFlyoutItem.Icon>
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="L" Modifiers="Control" />
                </MenuFlyoutItem.KeyboardAccelerators>
            </MenuFlyoutItem>
            <MenuFlyoutItem Name="BtnVolumnOn"
                            x:Uid="BtnVolumnOn"
                            Visibility="Collapsed"
                            Click="BtnVolumn_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xE767;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem Name="BtnVolumnOff"
                            x:Uid="BtnVolumnOff"
