                                          GroupName="YmyouliCol" />
                <muxc:RadioMenuFlyoutItem Name="BtnYmyouliCol227"
                                          x:Uid="BtnYmyouliCol227"
                                          Tag="227"
                                          Click="BtnYmyouliCol_Click"
                                          GroupName="YmyouliCol" />
                <muxc:RadioMenuFlyoutItem Name="BtnYmyouliCol228"
                                          x:Uid="BtnYmyouliCol228"
                                          Tag="228"
                                          Click="BtnYmyouliCol_Click"
                                          GroupName="YmyouliCol" />
                <muxc:RadioMenuFlyoutItem Name="BtnYmyouliCol229"
                                          x:Uid="BtnYmyouliCol229"
                                          Tag="229"
                                          Click="BtnYmyouliCol_Click"
                                          GroupName="YmyouliCol" />
                <muxc:RadioMenuFlyoutItem Name="BtnYmyouliCol230"
                                          x:Uid="BtnYmyouliCol230"
                                          Tag="230"
                                          Click="BtnYmyouliCol_Click"
                                          GroupName="YmyouliCol" />
                <muxc:RadioMenuFlyoutItem Name="BtnYmyouliCol231"
                                          x:Uid="BtnYmyouliCol231"
