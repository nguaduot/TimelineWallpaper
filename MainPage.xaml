                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xE81E;" />
                </MenuFlyoutSubItem.Icon>
                <muxc:RadioMenuFlyoutItem Name="BtnProviderBing"
                                          x:Uid="BtnProviderBing"
                                          Tag="bing"
