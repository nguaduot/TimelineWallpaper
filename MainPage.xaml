                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xE74F;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Name="BtnSave"
                            x:Uid="BtnSave"
                            IsEnabled="False"
                            Click="BtnSave_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xE896;" />
                </MenuFlyoutItem.Icon>
                <MenuFlyoutItem.KeyboardAccelerators>
