                                          GroupName="YmyouliCol" />
            </MenuFlyoutSubItem>
            <MenuFlyoutSubItem Name="BtnInfinityOrder"
                               x:Uid="BtnInfinityOrder"
                               Visibility="Collapsed">
                <MenuFlyoutSubItem.Icon>
                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xE8CB;" />
                </MenuFlyoutSubItem.Icon>
                <muxc:RadioMenuFlyoutItem Name="BtnInfinityOrder0"
                                          x:Uid="BtnInfinityOrder0"
                                          Tag=""
                                          Click="BtnInfinityOrder_Click"
                                          GroupName="InfinityOrder" />
                <muxc:RadioMenuFlyoutItem Name="BtnInfinityOrder1"
                                          x:Uid="BtnInfinityOrder1"
                                          Tag="rate"
                                          Click="BtnInfinityOrder_Click"
                                          GroupName="InfinityOrder" />
            </MenuFlyoutSubItem>
            <MenuFlyoutSeparator />
            <MenuFlyoutSubItem Name="BtnPush"
                               x:Uid="BtnPush">
                <MenuFlyoutSubItem.Icon>
                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xECC5;" />
                </MenuFlyoutSubItem.Icon>
                <muxc:RadioMenuFlyoutItem Name="BtnPushNone"
                                          x:Uid="BtnPushNone"
                                          Click="BtnPush_Click"
                                          Tag=""
                                          GroupName="Push" />
                <muxc:RadioMenuFlyoutItem Name="BtnPushCur"
                                          Click="BtnPush_Click"
                                          Visibility="Collapsed"
                                          IsEnabled="False"
                                          Tag=""
                                          GroupName="Push" />
                <muxc:RadioMenuFlyoutItem Name="BtnPushDesktop"
                                          Click="BtnPush_Click"
                                          Tag="desktop"
                                          GroupName="Push" />
                <muxc:RadioMenuFlyoutItem Name="BtnPushLock"
                                          Click="BtnPush_Click"
                                          Tag="lock"
                                          GroupName="Push" />
            </MenuFlyoutSubItem>
            <MenuFlyoutItem Name="BtnIni"
                            x:Uid="BtnIni"
                            KeyboardAcceleratorTextOverride=""
                            Click="BtnIni_Click">
                <MenuFlyoutItem.Icon>
                    <FontIcon FontFamily="{StaticResource ResourceKey=FluentIcons}"
                              Glyph="&#xE713;" />
                </MenuFlyoutItem.Icon>
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="O" Modifiers="Control" />
                </MenuFlyoutItem.KeyboardAccelerators>
